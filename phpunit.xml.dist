<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./vendor/autoload.php"
         colors="true"
         forceCoversAnnotation="true">

  <testsuites>
    <testsuite name="unit">
      <directory suffix="Test.php">tests/</directory>
      <exclude>tests/Integ</exclude>
    </testsuite>
  </testsuites>

  <filter>
    <whitelist>
      <directory suffix=".php">src</directory>
    </whitelist>
  </filter>

</phpunit>
